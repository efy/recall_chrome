{
  "name": "Recall",
  "manifest_version": 2,
  "description" : "To use, type 're' plus a search term into the Omnibox.",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "webRequest",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "omnibox": { 
    "keyword" : "re"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "commands": {
    "bookmark_current_page": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Bookmark current page"
    }
  }
}
